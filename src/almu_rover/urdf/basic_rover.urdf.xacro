<?xml version="1.0"?>
<robot name="almu_rover" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find almu_rover)/urdf/materials.urdf.xacro" />

    <link name="base_link" />

    <link name="body">
        <visual>
            <geometry>
                <box size="1.2 1.0 0.3"/>
            </geometry>
            <!-- <material name="blue" /> -->
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="1.2 1.0 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="front_left_arm">
        <visual>
            <geometry>
                <box size="0.5 0.2 0.2"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.2 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="front_left_joint" type="fixed">
        <parent link="body"/>
        <child link="front_left_arm"/>
        <origin xyz="0.5 0.6 0" rpy="0 ${pi / 2} 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="front_right_arm">
        <visual>
            <geometry>
            <box size="0.5 0.2 0.2"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.2 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="front_right_joint" type="fixed">
        <parent link="body"/>
        <child link="front_right_arm"/>
        <origin xyz="0.5 -0.6 0" rpy="0 ${pi / 2} 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="rear_left_arm">
        <visual>
            <geometry>
            <box size="0.5 0.2 0.2"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.2 0.2"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="rear_left_joint" type="fixed">
        <parent link="body"/>
        <child link="rear_left_arm"/>
        <origin xyz="-0.5 0.6 0" rpy="0 ${pi / 2} 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="rear_right_arm">
        <visual>
            <geometry>
            <box size="0.5 0.2 0.2"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.2 0.2"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="rear_right_joint" type="fixed">
        <parent link="body"/>
        <child link="rear_right_arm"/>
        <origin xyz="-0.5 -0.6 0" rpy="0 ${pi / 2} 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1</mu>
                <mu2>1</mu2>
                <slip1>0.035</slip1>
                <slip2>0</slip2>
                <fdir1>0 0 1</fdir1>
              </ode>
              <bullet>
                <friction>1</friction>
                <friction2>1</friction2>
                <rolling_friction>0.1</rolling_friction>
                <spinning_friction>0.1</spinning_friction>
              </bullet>
            </friction>
          </surface>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
        <parent link="front_left_arm"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.5 0.1 0" rpy="${-pi / 2} 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1e300" upper="1e300" velocity="1e300"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        </collision>
          <surface>
            <friction>
              <ode>
                <mu>1</mu>
                <mu2>1</mu2>
                <slip1>0.035</slip1>
                <slip2>0</slip2>
                <fdir1>0 0 1</fdir1>
              </ode>
              <bullet>
                <friction>1</friction>
                <friction2>1</friction2>
                <rolling_friction>0.1</rolling_friction>
                <spinning_friction>0.1</spinning_friction>
              </bullet>
            </friction>
          </surface>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="front_right_wheel_joint" type="revolute">
        <parent link="front_right_arm"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.5 -0.1 0" rpy="${-pi / 2} 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1e300" upper="1e300" velocity="1e300"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1</mu>
                <mu2>1</mu2>
                <slip1>0.035</slip1>
                <slip2>0</slip2>
                <fdir1>0 0 1</fdir1>
              </ode>
              <bullet>
                <friction>1</friction>
                <friction2>1</friction2>
                <rolling_friction>0.1</rolling_friction>
                <spinning_friction>0.1</spinning_friction>
              </bullet>
            </friction>
          </surface>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="rear_left_wheel_joint" type="revolute">
        <parent link="rear_left_arm"/>
        <child link="rear_left_wheel"/>
        <origin xyz="0.5 0.1 0" rpy="${-pi / 2} 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1e300" upper="1e300" velocity="1e300"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        </collision>
          <surface>
            <friction>
              <ode>
                <mu>1</mu>
                <mu2>1</mu2>
                <slip1>0.035</slip1>
                <slip2>0</slip2>
                <fdir1>0 0 1</fdir1>
              </ode>
              <bullet>
                <friction>1</friction>
                <friction2>1</friction2>
                <rolling_friction>0.1</rolling_friction>
                <spinning_friction>0.1</spinning_friction>
              </bullet>
            </friction>
          </surface>
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="rear_right_wheel_joint" type="revolute">
        <parent link="rear_right_arm"/>
        <child link="rear_right_wheel"/>
        <origin xyz="0.5 -0.1 0" rpy="${-pi / 2} 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1e300" upper="1e300" velocity="1e300"/>
    </joint>

    <gazebo>
        <plugin
            filename="ignition-gazebo-diff-drive-system"
            name="ignition::gazebo::systems::DiffDrive">
            <left_joint>front_left_wheel_joint</left_joint>
            <left_joint>rear_left_wheel_joint</left_joint>
            <right_joint>front_right_wheel_joint</right_joint>
            <right_joint>rear_right_wheel_joint</right_joint>
            <wheel_separation>1.2</wheel_separation>
            <wheel_radius>0.1</wheel_radius>
            <odom_publish_frequency>30</odom_publish_frequency>
            <max_linear_acceleration>1</max_linear_acceleration>
            <min_linear_acceleration>-1</min_linear_acceleration>
            <max_angular_acceleration>2</max_angular_acceleration>
            <min_angular_acceleration>-2</min_angular_acceleration>
            <max_linear_velocity>1.0</max_linear_velocity>
            <min_linear_velocity>-1.0</min_linear_velocity>
            <max_angular_velocity>1</max_angular_velocity>
            <min_angular_velocity>-1</min_angular_velocity>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
        </plugin>

        <plugin
            filename="ignition-gazebo-joint-state-publisher-system"
            name="ignition::gazebo::systems::JointStatePublisher">
        </plugin>
    </gazebo>
</robot>
